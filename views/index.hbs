{{#contentFor 'head'}}
<title>Tandem.io</title>
{{/contentFor}}

<form id="new" action="/rooms" method="POST">
	<button type="submit">Create a new room</button>
	<label><input type="checkbox" name="private" /> Private?</label>
</form>
<div id="rooms">
	<ul class="list">
		{{#rooms}}
		<li><a href="/rooms/{{id}}">{{name}}</a></li>
		{{/rooms}}
	</ul>
</div>
