<!DOCTYPE html>
<html>
<head>
	<title>{{room.id}}</title>
	<link rel="stylesheet" href="/compiled/index.css" />
	{{#dev}}<script src="http://localhost:35729/livereload.js"></script>{{/dev}}
	<script>{{{javascript}}}</script>
	<script src="/compiled/room.js"></script>
</head>
<body id="page-room">
	<h1 id="title">{{room.id}}</h1>
	{{#user}}
	<div id="auth">
		{{#if soundcloud_id}}
		SoundCloud Account Linked
		{{else}}
		<a href="/auth/soundcloud">Link SoundCloud Account</a>
		{{/if}}
		{{#if youtube_id}}
		YouTube Account Linked
		{{else}}
		<a href="/auth/youtube">Link YouTube Account</a>
		{{/if}}
	</div>
	{{/user}}
	<div id="search"></div>
	<div id="social">
		<div id="users"></div>
		<div id="chat"></div>
	</div>
	<div id="media">
		<div id="player"></div>
		<div id="playlist"></div>
	</div>
</body>
</html>